  %head
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>#{current_page.data.title} Codeship Documentation</title>
    <meta name="description" content="">

    = stylesheet_link_tag "app"
    = javascript_include_tag "modernizr"

  %body.hide-extras
    .off-canvas-wrap
      .inner-wrap
        %nav.tab-bar
          %a.left-off-canvas-toggle.menu-icon
            %span

          %section.middle.tab-bar-section
            = link_to "Codeship Documentation", "/documentation", class: :codeship

        %aside.index-menu
          = link_to "", "http://www.codeship.io", class: :codeship
          %ul
            = list_item_for_category 'Tutorials'
            = list_item_for_category 'Configure Build and Test Environment'
            = list_item_for_category 'Continuous Deployment'
            = list_item_for_category 'Managing your project'
            = list_item_for_category 'Languages and Frameworks'
            = list_item_for_category 'Databases and Queues'
            = list_item_for_category 'Troubleshooting'
            = list_item_for_category 'Infrastructure and Security'
            = list_item_for_category 'Useful Links'

        %section.main-section{role: "main"}
          %h4= link_to "Documentation", "/", class: :codeship
          = partial 'swiftype'

          - if current_page.data.include? 'tags'
            .panel
              %ul.inline-list
                - current_page.tags.each do |tag|
                  %li= link_to "##{tag}", tag_path(tag)
          / - else
          /   - blog.tags.each do |tag, articles|
          /     %li= link_to "##{tag} (#{articles.size})", tag_path(tag)
          = breadcrumbs
          ~ yield

          %footer.info
            %a{href: "https://github.com/codeship/docs/issues", target: :blank}Report issue
            %a.intercom{href: ""} Contact the Codeship Team

      %a.exit-off-canvas



    = javascript_include_tag "all"

    = yield_content(:javascript)

